{
    "name": "typescript-service-template",
    "private": true,
    "version": "0.0.1",
    "description": " typescript service that works with docker and shit",
    "author": "Amir Arad <greenshade@gmail.com>",
    "license": "MIT",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/**/*",
        "!dist/**/*.test.js"
    ],
    "engines": {
        "node": ">=12.18.0"
    },
    "scripts": {
        "test:format": "npm run prettier && npm run lint",
        "test:types": "tsc --noEmit --skipLibCheck",
        "lint": "eslint .",
        "pretest": "npm run test:types && npm run test:format",
        "clean": "rimraf ./dist/",
        "prebuild": "npm run clean",
        "build": "tsc --skipLibCheck -p ./tsconfig.prod.json && docker build -t local/typescript-service-template .",
        "test": "npm run test:quick",
        "test:quick": "echo '-- TEST --' && jest",
        "test:e2e": "npm run build && echo '-- E2E TEST --' && jest --config=./jest.e2e.config.js",
        "prepack": "npm run build",
        "pretty-quick": "pretty-quick --staged --pattern \"./modules/*/src/**/*.{ts,tsx,json}\"",
        "prettier": "prettier --ignore-path .eslintignore -c **/*.{js,ts,jsx,tsx}",
        "prettify": "prettier \"src/**/*.ts\" --write && prettier \"e2e/**/*.ts\" --write",
        "start": "node --require dotenv/config ./dist/main.js"
    },
    "devDependencies": {
        "@types/jest": "^29.1.0",
        "@types/node": "18.7.23",
        "@types/node-fetch": "^2.6.2",
        "@typescript-eslint/eslint-plugin": "^5.38.1",
        "@typescript-eslint/parser": "^5.38.1",
        "docker-compose-mocha": "^1.2.0",
        "esbuild": "^0.15.10",
        "esbuild-jest": "^0.5.0",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-no-only-tests": "^3.0.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "jest": "^29.1.1",
        "jest-junit": "^14.0.1",
        "lint-staged": "^13.0.3",
        "node-fetch": "^2.6.6",
        "prettier": "^2.7.1",
        "pretty-quick": "^3.1.0",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "ts-retry-promise": "^0.7.0",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "dotenv": "^16.0.3",
        "env-var": "^7.3.0"
    }
}
